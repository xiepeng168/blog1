                         </div>
                        <button  type="button" class="btn btn-danger" style="margin-left: 30px">
                            <a href="/home/details" >点击阅读全文</a>
                            </button>
                        <button type="button" class="btn btn-default" style="margin-left: 30px">
                            <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
                            <span>浏览量</span>
                            <span><%=list[i].view%></span>
                        </button>
                    </div>
                    <% } %>

                </div>

               <!--分页-->
                <% if(totalPage> 1){ %>
                <nav aria-label="Page navigation" style="margin-left: 30%">
                    <ul class="pagination">
                        <%if(page > 1){%>
                        <li>
                            <a href="/?page=<%=parseInt(page)-1%>" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <% } %>
                        <li><a href="#">第<%= page %>页/共<%=totalPage%>页</a></li>
                        <%if(page <= totalPage){%>
                        <li>
                            <a href="/?page=<%=parseInt(page)+1%>" aria-label="Next">
